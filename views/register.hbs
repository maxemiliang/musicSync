<div class="grid-row">
	<div class="grid-column -xsmall-11">
		<br>
		<h2>Sign up today!</h2>
		{{#if err}}
		    <div class="alert -error">{{err}}</div>
		{{/if}}
		<form action="/register" method="post" class="form">
			<div class="field">
				<label for="username">Your Username:</label>
				<input type="text" id="username" name="username" placeholder="johndoe1">
			</div>
			<div class="field">
					<label for="password">Your Password:</label>
					<input type="password" id="password" name="password" placeholder="Hunter1">
					<div class="form-actions"><button class="button -primary" type="submit">Register</button></div>
			</div>
		</form>
	</div>
</div>